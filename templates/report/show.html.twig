{% extends 'base.html.twig' %}

{% block title %}Report{% endblock %}

{% block body %}
    <h1>Report</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ report.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ report.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ report.date ? report.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ report.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_report_index') }}">back to list</a>

    <a href="{{ path('app_report_edit', {'id': report.id}) }}">edit</a>

   
{% endblock %}

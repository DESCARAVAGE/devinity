{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ encore_entry_link_tags('dashboard') }}
{% endblock %}

{% block title %}
	{{ parent() }}
	| News
{% endblock %}

{% block body %}
	<div class="p-3 mb-5">
		<div class="title rounded-pill my-2 float-start">
			<h2 class="text-white px-3 my-2">My news</h2>
		</div>
		<table class="table align-middle">
			<thead>
				<tr class="bg-dark text-light">
					<th>Type</th>
					<th class="text-center">Name</th>
					<th>Followers</th>
					<th>Participants</th>
					<th>Statut</th>
				</tr>
			</thead>
			<tbody>
				{% for project in app.user.projects %}
					<tr href="{{ path('dashboard_show_project', {id: project.id}) }}">
						<td>
							{% if project.isProject %}
								Project
							{% else %}
								Idea
							{% endif %}
						</td>
						<td class="text-light">{{ project.name }}</td>
						<td>{{ project.countFollowers }}</td>
						<td>{{ project.participants }}</td>
						<td class="badge bg-success">{{ project.statut }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
